{
  "extends": "expo/tsconfig.base",
  "exclude": ["node_modules", "babel.config.js"],
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": ["DOM", "ESNext"],
    "jsx": "react-native",
    "moduleResolution": "node",
    "target": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@/assets/*": ["./assets/*"],
      "@/*": ["./src/*"]
    }
  }
}
